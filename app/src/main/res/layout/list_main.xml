<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="Home Page"
            android:textSize="25dp"
            android:background="@color/orange"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        app:srcCompat="@drawable/header" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="167dp"
                            app:srcCompat="@drawable/offer" />

                        <LinearLayout
                            android:layout_width="148dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="138dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="Upcoming Offers"
                                android:textColor="@color/orange" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="130dp"
                                android:layout_marginTop="20dp"
                                android:text="Please Visit Our Store For upcoming offers or call us at
                                    222-878-1023 "
                                android:textColor="@color/white" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="Product Categories"
                        android:textColor="@color/orange"
                        android:textSize="20dp" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card1"
                        android:layout_width="370dp"
                        android:layout_height="350dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="100dp"
                        android:background="#00BCD4"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="15dp">


                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="371dp"

                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/smart_phones" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="200dp"
                            android:text="Smart Phones"
                            android:textAlignment="center"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="250dp"
                            android:text="Price Range :$900-1500"
                            android:textAlignment="center"
                            android:textSize="20dp"></TextView>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card2"
                        android:layout_width="370dp"
                        android:layout_height="350dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="100dp"
                        android:background="#00BCD4"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="15dp">


                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="370dp"
                            android:layout_height="196dp"
                            app:srcCompat="@drawable/televisions" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="200dp"
                            android:text="Smart Television"
                            android:textAlignment="center"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="250dp"
                            android:text="Price Range :$900-1500"
                            android:textAlignment="center"
                            android:textSize="20dp"></TextView>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="370dp"
                        android:layout_height="350dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="100dp"
                        android:background="#00BCD4"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="15dp">


                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="368dp"
                            android:layout_height="192dp"
                            app:srcCompat="@drawable/smartrefrigirator" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="200dp"
                            android:text="Smart Refrigerators"
                            android:textAlignment="center"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </TextView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="250dp"
                            android:text="Price Range :$900-1500"
                            android:textAlignment="center"
                            android:textSize="20dp"></TextView>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            </ScrollView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:backgroundTint="#000000">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="TNP ELECTRONIC SHOP"
                    android:textColor="#ff8000"
                    android:textSize="24sp">

                </TextView>

                <ImageView
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="310dp"
                    app:srcCompat="@drawable/logo">

                </ImageView>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>